	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"const cookieJar = pm.cookies.jar();",
					"const URL = pm.variables.get(\"host\");",
					"cookieJar.get(",
					"    URL, ",
					"    \"csrftoken_django\", ",
					"    (error, cookie) => {",
					"        if (cookie) {",
					"            pm.request.headers.add({ key: \"X-CSRFToken\", value: cookie });",
					"        }",
					"        else {",
					"            console.log(\"Failed to get CSRF Token:\", error);",
					"        }",
					"    }",
					");"
				]
			}
		},
